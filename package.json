{
  "name": "@versa-stack/page-canvas",
  "private": true,
  "workspaces": [
    "apps/editor",
    "apps/viewer",
    "packages/ui-components",
    "packages/vcraft-base",
    "packages/vcraft-editor",
    "packages/page-management"
  ],
  "packageManager": "yarn@4.9.2",
  "scripts": {
    "lint": "eslint . --ext .ts,.vue,.js",
    "lint:fix": "eslint . --ext .ts,.vue,.js --fix",
    "format": "prettier --write \"**/*.{ts,vue,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,vue,js,json,md}\"",
    "type-check": "yarn workspaces foreach -A run type-check",
    "build": "yarn workspaces foreach -A run build",
    "dev:editor": "yarn workspace @versa-stack/page-canvas-editor dev",
    "dev:viewer": "yarn workspace @versa-stack/page-canvas-viewer dev"
  },
  "devDependencies": {
    "@nuxt/eslint": "^0.7.4",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-vue": "^9.32.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2",
    "vue-eslint-parser": "^9.4.3",
    "vue-tsc": "^3.1.5"
  },
  "resolutions": {
    "vue": "^3.5.22",
    "vue-router": "^4.6.3",
    "vue-tsc": "^3.1.5",
    "@vue/language-core": "^3.1.5",
    "@versa-stack/v-craft": "^0.1.0-alpha.26",
    "nuxt": "^4.2.1",
    "@nuxt/kit": "^4.2.1",
    "pinia": "^3.0.4",
    "@pinia/nuxt": "^0.11.3",
    "vite": "^6.2.4",
    "typescript": "^5.7.2",
    "@types/node": "^22.14.0",
    "@tailwindcss/vite": "^4.1.17",
    "tailwindcss": "^4.1.17",
    "daisyui": "^5.5.2",
    "uuid": "^11.1.0"
  }
}
